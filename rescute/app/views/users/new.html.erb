<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, method: 'post', url: {action: 'create'} do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :first_name %> <br>
      <%= f.text_field :first_name %> <br>
      <%= f.label :last_name %> <br>
      <%= f.text_field :last_name %> <br>
      <%= f.label :username %> <br>
      <%= f.text_field :username %> <br>
      <%= f.label :gender %> <br>
      <%= f.select :gender, User::GENDER_TYPES %> <br>
      <%= f.label :email %> <br>
      <%= f.email_field :email %> <br>
      <%= f.label :password, "Password: minimum of 7 characters" %> <br>
      <%= f.password_field :password %> <br>
      <%= f.label :password_confirmation, "confirm password" %> <br>
      <%= f.password_field :password_confirmation %> <br><br>
      <%= f.submit "Create Account", class: "btn btn-primary" %>
      <p>Already have an account? <%= link_to "Log In", login_path %></p>
    <% end %>
  </div>
</div>
